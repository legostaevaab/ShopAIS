<Window x:Class="Shop.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="Authorization" Height="450" Width="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid Background="#f6fbfb">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition />
            <RowDefinition Height="5*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="2" Background="Transparent" Click="Exit" >
            <Image Source="recources\closeBt.png"/>
        </Button>
        <StackPanel Grid.Row="2" Grid.Column="1">
            <Label Content="Логин"/>
            <TextBox x:Name="log"/>
            <Label Content="Пароль"/>
            <PasswordBox x:Name="pass"/>
            <Button Content="Вход" Height="30" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
