<Window x:Class="Shop.ChangeEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="ChangeEmployee" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize" Loaded="Window_Loaded" >
    <Grid>
        <Grid Background="SeaShell">


            <StackPanel Margin="5">

                <TextBox Text="Фамилия" Name="surname"/>
                <TextBox Text="Имя" Name="name"/>
                <TextBox Text="Отчество" Name="patronymic"/>
                <ComboBox Background="Transparent" Name="role"/>
                <TextBox Text="Логин" Name="login"/>
                <TextBox Text="Пароль" Name="passwprd"/>
                <Button Content="Сохранить" Click="Change"/>
                <Button Content="Назад" Click="Back"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
