<Window x:Class="Shop.ChangeProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="ChangeProduct" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid Background="SeaShell" Loaded="Grid_Loaded">
        
        
        <StackPanel Margin="5">
            
                    <TextBox Text="Тип" Name="type"/>
                    <TextBox Text="Производитель" Name="manufacturer"/>
                    <TextBox Text="Цена" Name="price"/>
                    <TextBox Text="Размер" Name="size"/>
                    <TextBox Text="Осталось" Name="balance"/>
                    <TextBox Text="Описание" Name="description"/>
                    <TextBox Text="Цвет" Name="color"/>
                    <ComboBox Background="Transparent" Name="sex"/>
                    <ComboBox Background="Transparent" Name="age"/>
            
            <Button Content="Сохранить" Click="Change"/>
            <Button Content="Назад" Click="Back"/>
        </StackPanel>
    </Grid>
</Window>
